@model IEnumerable<MeuSite.Models.sala>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}
<html>
<head>
    <link href="~/Css/PesquisaSalas.css" rel="stylesheet" />
    @using MeuSite.Models;
</head>
<body>
    @using (Html.BeginForm())
    {

        sala obj = new sala();
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <table class="tabSUb">
                <tr>
                    <td>
                        <div class="form-group">
                            <div class="col-md-10 submenu">
                                Filtrar por Tema
                                @Html.DropDownList("idTemaSala", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => obj.idTemaSala, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <div class="col-md-10 submenu">
                                Filtrar por Nome
                                @Html.EditorFor(model => obj.Nome, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => obj.Nome, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="tabSUb">
                            <input type="submit" value="Aplicar" class="btn btn-default" />
                        </div>
                    </td>
                    <td></td>
                    @*<td>
                        <input type="submit" value="Restaurar filtragem" class="btn btn-default" />
                    </td*@
                </tr>
        </table>
    }
    <p>
        <input type="submit" value="Restaurar" class="btn btn-default" />
    </p>
    <h2 style="background-color:white; text-align:center">Salas</h2>
    <div style="background-color:white; overflow: scroll; height:50%; width:60%;">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayName("Nome")
                </th>
                <th>
                    @Html.DisplayName("Tema")
                </th>
                <th>
                    @Html.DisplayName("Descrição")
                </th>
                <th></th>
            </tr>

            @{
                edbancoEntities db = new edbancoEntities();
                foreach (var item in Model) { 
            
                
                
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayName(db.temasala.Find(item.idTemaSala).nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descrecao)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                    </td>
                </tr>
            }
            }

        </table>
    </div>
</body>
</html>